    <view class="pd40 text-l {{index == curAdd ? 'addactive' : ''}}" bindtap='selectAdd'  wx:for="{{addList}}" wx:key="{{index}}"  data-index = "{{index}}" data-id='{{item.addrId}}'>
      <view class=""><text class='pr20'>{{item.name}}</text>{{item.mobile}}</view>
       <view class="mt5">{{item.province +item.city + item.region + item.town + item.addr}}</view>
