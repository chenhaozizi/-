    <view class="section mt20">
  <textarea class='border radius font-md2 pd20' style='border-color:#666 !important' bindblur="bindTextAreaBlur" auto-height placeholder="说点什么。。。" />
</view>
  </view>
</view>
 <view class='bottom-button' bindtap='confirmGetcellar'>
