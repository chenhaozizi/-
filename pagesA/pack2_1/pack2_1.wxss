.ts {
  display: none;
  position: absolute;
  right: 40rpx;
  top: 44%;
  writing-mode: tb-rl;
  color: #666;
  font-size: 28rpx;
}

.ts2 {
  text-align: center;
}

.ts2 view {
  display: inline-block;
  width: 30%;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

.pack_bottom {
  position: relative;
  width: 100%;
  height: 0;
  overflow: hidden;
  transition: all 400ms ease-in;
  background: #f1f0f5
}
.gn_box2 {
  background: none;
}

.next_step {
  bottom: 80rpx;
}
.scroll-view view image {
  width: 98%;
  height: 98%;
  transition: all 200ms;
  border: 1px solid #403332;
}


