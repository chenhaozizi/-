page{
    height: 100%;
    background-color: #f5f5f9;
    justify-content: initial;
}
.container{
    background-color: #f5f5f9;
    justify-content: initial;
    display: block;
}

.form-panel{
   font-size: 26rpx;
   margin-top:25rpx;
   margin-bottom:25rpx;
   background-color: #fff;
   justify-content: initial;
   display: block;
   padding: 1rpx;
}
.form-panel .form-item{
   line-height: 88rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
  
   justify-content:space-between;
   margin: 0 25rpx;
   border-bottom: 1rpx solid #eee;
}
.form-panel .form-row{
   line-height: 88rpx;
   display: flex;
   flex-direction: column;
   align-items:flex-start;
  
   justify-content:space-between;
   margin: 0 25rpx;
   border-bottom: 1rpx solid #eee;
}
.form-panel .form-item label{
  font-size: 26rpx;
  display: inline-block;
  width:206rpx;

}
.form-panel .form-item input{
  font-size: 26rpx;
  display: inline-flex;
  width: 100%;
  color:#777;
}
button{
  margin:26rpx 48rpx;
  font-size:28rpx; 
}
button.success{
  background-color:#E64340;
  color: #fff;
}

button.canel{
   background-color:#f5f5f9;
   color: #777;
}