.form-panel{
   font-size: 26rpx;
   margin-top:25rpx;
   margin-bottom:25rpx;
   background-color: #fff;
   justify-content: initial;
   display: block;
   padding: 1rpx;
}
.form-panel .form-item{
   line-height: 88rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
  
   justify-content:space-between;
   margin: 0 25rpx;
   border-bottom: 1rpx solid #eee;
}
.form-panel .form-row{
   line-height: 88rpx;
   display: flex;
   flex-direction: column;
   align-items:flex-start;
  
   justify-content:space-between;
   margin: 0 25rpx;
   border-bottom: 1rpx solid #eee;
}
.form-panel .form-item label{
  font-size: 26rpx;
  display: inline-block;
  width:206rpx;

}
.form-panel .form-item input{
  font-size: 26rpx;
  display: inline-flex;
  width: 100%;
  color:#777;
}
