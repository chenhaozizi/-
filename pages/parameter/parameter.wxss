/* pages/parameter/parameter.wxss */

page {

  text-align: center;
}

form {
  text-align: left;
  display: inline-block;
  width: 700rpx;
  margin: 0 auto;
}
.radio_box {
  color: #dd5345;
  transition: all 300ms;
  overflow: hidden
}

.section__title {
  text-indent: 22rpx;
  text-align: left;
  padding: 40rpx 0;
  color: #333333;
}
.section__title i {
  float: right;
  margin-right: 30rpx;
}

label {
  overflow: hidden;
}
label image {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border: 1rpx solid #fff;
  transition: all 250ms;
}

.brand radio {
  display: none;
}

.light {
  border: 1rpx solid #a314b0;
}
