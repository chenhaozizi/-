radio :checked {
  color: black;
  background: black;
}

/*未选中样式  */

radio .wx-radio-input {
  /* border-radius: 50%; 圆角  *//* width: 40rpx; *//* height: 40rpx; */
  border-color: #ffb700;
}

/*选中后  */
radio .wx-radio-input.wx-radio-input-checked {
  /* border: none; */
  background: #fff;
}

/*选中后勾的样式  */

radio .wx-radio-input.wx-radio-input-checked::before {
  margin-top:-1rpx; 
  border-color: #ffb700;
  border-radius: 50%; /* 圆角  */
  width: 60rpx; /*选中后对勾大小，不要超过背景的尺寸  */
  height: 61rpx; /* 选中后对勾大小，不要超过背景的尺寸  */
  line-height: 60rpx;
  text-align: center;
  font-size: 40rpx; /*对勾大小 30rpx  */
  color: #ffb700; /* 对勾颜色 白色 */
  background:#ffb700;
  /* transform:translate(-50%, -50%) scale(1); *//* -webkit-transform:translate(-50%, -50%) scale(1); */
}

