/* pages/parameter/parameter.wxss */

page {

  text-align: center;
}

form {
  display: inline-block;
  width: 700rpx;
  margin: 40rpx auto 0;
}

.section {
  text-align: left;
  margin-bottom: 6rpx;
  background: white;
  border-radius: 50rpx;
  color: white;
}

.radio_box {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 160rpx;
  padding: 0 20rpx;
  color: #dd5345;
  transition: all 300ms;
  overflow: hidden
}

.section__title {
  font-size: 32rpx;
  padding: 25rpx 0;
  border-radius: 50rpx;
  text-indent: 20rpx;
  box-shadow: 0 2rpx 4rpx white inset;
  background:  #dd5345 url(data:image/png;base64,) no-repeat;
  background-position: right 35rpx  center;
  background-size: 40rpx 25rpx;
}
.section__title i {
  float: right;
  margin-right: 30rpx;
}

label {
  margin: 0 10rpx;
}

label image {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border: 1px solid #fff;
  transition: all 250ms;
}

.brand radio {
  display: none;
}

.light {
  width: 100rpx;
  height: 100rpx;
  border: 4rpx solid #ffb700;
}
