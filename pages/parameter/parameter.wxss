/*蒙版  */
.mask{
  width:100%;
  height:100%;
  position:absolute;
  background-color:#999;
  z-index:99;
  top:0;
  left:0;
  opacity:0.5;
  -moz-opacity: 0.7;   
  filter: alpha(opacity=70);
}
.close{position: fixed;right:40rpx;top:40rpx;}
.close image{width: 80rpx;height: 80rpx;float: right}