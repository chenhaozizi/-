/* pages/order/order.wxss */

page {
  background: white;
  color: #4e4e4e;
}

.container {
  align-items: flex-start;
  height: auto;
}

/*商品详情 */

.goods_info {
  padding: 40rpx 0;
  margin: 0 auto;
  width: 94%;
  overflow: hidden;
  font-size: 29rpx;
  line-height: 44rpx;
 
}

.img {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  float: left;
  overflow: hidden;
  text-align: center;
}

.img image {
  width: 90%;
  height: 90%;
}

/* 数量计算 */

/*主容器*/

.stepper {
  display: inline-block;
  width: 90px;
  /*给主容器设一个边框*/
  border: 1rpx solid #dedbde;
  margin: 0 auto;
}

/*加号和减号*/

.stepper text {
  width: 25%;
  line-height: 27px;
  text-align: center;
  float: left;
  background: #ecebec;
}

/*数值*/

.stepper input {
  width: calc(50% - 2px);
  height: 27px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

.bt {
  overflow: hidden;
}

.bt text {
  display: inline-block;
  margin-right: 10rpx;
}

.bt_box {
  width: 440rpx;
  height: 200rpx;
  float: left;
  overflow: hidden;
  padding-left: 20rpx;
}

.sl {
  padding: 0 14rpx;
  height: 100%;
  line-height: 26px;
  background: #dedbde;
  border: 2rpx solid #dedbde;
}

.sl_box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 27px;
}

.addr_box {
  width: 100%;
  background: #eee;
  padding: 20rpx 0;
}

.add_addr {
  display: flex;
  padding: 20rpx 30rpx;
  background: white;
  justify-content: flex-start;
  align-items: center;
}

.add_addr image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.dzts {
  color: #cfcccc;
}

.dispatch {
  padding: 20rpx 40rpx;
  margin: 0 auto;
  background: #fff
}
 .pp{font-size: 32rpx !important;} 

.dispatch text {
  width: 180rpx;
